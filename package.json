{
  "name": "zspec",
  "private": true,
  "version": "1.0.0",
  "description": "The Z-Machine Standards Document, version 1.1 (annotated)",
  "author": "Jared Reisinger",
  "license": "None",
  "keywords": [
    "z-machine",
    "z-standard",
    "infocom",
    "inform",
    "documentation"
  ],
  "homepage": "https://github.com/JaredReisinger/zspec#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JaredReisinger/zspec.git"
  },
  "bugs": {
    "url": "https://github.com/JaredReisinger/zspec/issues"
  },
  "scripts": {
    "#": "echo NYI",
    "build": "antora playbook.yml",
    "prebuild": "npm run clean",
    "clean": "rimraf build",
    "serve": "serve -l 5000 ./build/site",
    "watch": "npm-watch build",
    "dev": "concurrently \"npm:serve\" \"npm:watch\""
  },
  "watch": {
    "build": {
      "patterns": [
        ".",
        "modules"
      ],
      "extensions": "adoc,yml",
      "runOnChangeOnly": false
    }
  },
  "devDependencies": {
    "@antora/cli": "^3.0.1",
    "@antora/site-generator": "^3.0.1",
    "concurrently": "^7.0.0",
    "npm-watch": "^0.11.0",
    "rimraf": "^3.0.2",
    "serve": "^13.0.2"
  }
}
